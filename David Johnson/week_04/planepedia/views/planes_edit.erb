<h1>Edit</h1>

<form action="/aircraft/<%= @specific_aircraft["id"] %>" method="post">
  <label>
  Manufacturer:
  <input name="manufacturer" placeholder="de havilland" required value="<%= @specific_aircraft["manufacturer"] %>">
</label>
<label>
  Model:
  <input name="model" placeholder="Beaver" required value="<%= @specific_aircraft["model"] %>">
</label>
<label>
  Image:
  <input type="url" name="image" placeholder="http://..." value="<%= @specific_aircraft["image"] %>">
</label>
<label>
  Description:
  <input name="description" placeholder="An all time great!" value="<%= @specific_aircraft["description"] %>">
</label>
<button>Save Changes</button>
</form>
